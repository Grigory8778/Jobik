<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_hello"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margBottom"
        android:backgroundTint="@color/next"
        android:text="ДАЛЬШЕ"
        android:textSize="@dimen/t16p"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/t16p"
        android:layout_marginEnd="@dimen/t16p"
        android:paddingTop="@dimen/t16p"
        android:paddingBottom="@dimen/t16p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:stateListAnimator="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_hello_onbord"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/t16p"
        app:layout_constraintBottom_toTopOf="@+id/btn_hello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="130dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>